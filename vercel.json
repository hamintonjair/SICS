{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "installCommand": "python -m pip install --upgrade pip && pip install -r backend/api/requirements.txt --only-binary :all:",
        "includeFiles": "backend/api/**",
        "suppressStreamDuringInit": true
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api"
    },
    {
      "src": "/",
      "dest": "/frontend"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "true",
    "PYTHONPATH": "/var/task",
    "PYTHON_VERSION": "3.9"
  },
  "functions": {
    "backend/api/index.py": {
      "runtime": "python3.9",
      "maxDuration": 10,
      "memory": 1024
    }
  }
}
